const withI18n = function WithI18n(Story: StoryFn, context: StoryContext) {
  React.useEffect(() => {
    i18n.changeLanguage(context.globals.locale)
  }, [context.globals.locale])

  return (
    <I18nextProvider i18n={i18n}>
      <Story />
    </I18nextProvider>
  )
}

const preview: Preview = {
  decorators: [withI18n],
}

